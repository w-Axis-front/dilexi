- const orderContent = LANG.order;

section.order#order
    .container
        h2.order__title= orderContent.title
        p.order__subtitle= orderContent.subtitle
        p.order__total-number
            span= orderContent.number_text
            span= orderContent.number
        .order__gift
            h3.order__gift-title= orderContent.gift_title
            p.order__gift-text= orderContent.gift_text
            img&attributes(orderContent.img).order__gift-img
        .order__table-wrapper
            .order__table-title
                .order__table-title0
                .order__table-title1= orderContent.table_title1
                .order__table-title2
                    p= orderContent.table_title2
                .order__table-title3= orderContent.table_title3
                .order__table-title4= orderContent.table_title4
                .order__table-title5
            .order__table-row
                .order__table-row-first
                    .order__table-column1
                        .order__table-add-btn
                            .order__table-add-icon
                    .order__table-column2
                        img&attributes(assortmentContent.cards[0].img).order__table-product-img
                        p.order__table-product-title= assortmentContent.cards[0].title
                    .order__table-column3
                        p= 1
                    .order__table-column4
                        p.order__table-column4-content
                            span.order__table-product-size= orderContent.table_size
                            svg(class="order__table-arrow-down-img" width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg")
                                path(class="stroke" d="M1.49264 1.28902L6.44238 6.23877L11.3921 1.28902" stroke-width="2")
                        .order__table-product-sizes-wrapper
                    p.order__table-column5= assortmentContent.price
                    .order__table-column6
                        .order__table-bin-btn
                            img&attributes(orderContent.bin_img).order__table-bin-img
                .order__table-row-same
                    .order__table-column1
                    .order__table-column2
                    .order__table-column3
                        p= 1
                    .order__table-column4
                        p.order__table-column4-content
                            span.order__table-product-size= orderContent.table_size
                            svg(class="order__table-arrow-down-img" width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg")
                                path(class="stroke" d="M1.49264 1.28902L6.44238 6.23877L11.3921 1.28902" stroke-width="2")
                        .order__table-product-sizes-wrapper
                    p.order__table-column5= assortmentContent.price
                    .order__table-column6
                        .order__table-bin-btn
                            img&attributes(orderContent.bin_img).order__table-bin-img
            .order__table-row
                .order__table-row-first
                    .order__table-column1
                        .order__table-add-btn
                            .order__table-add-icon
                    .order__table-column2
                        img&attributes(assortmentContent.cards[1].img).order__table-product-img
                        p.order__table-product-title= assortmentContent.cards[1].title
                    .order__table-column3
                        p= 1
                    .order__table-column4
                        p.order__table-column4-content
                            span.order__table-product-size= orderContent.table_size
                            img&attributes(orderContent.arrow_icon).order__table-arrow-down-img
                        .order__table-product-sizes-wrapper
                    p.order__table-column5= assortmentContent.price
                    .order__table-column6
                        .order__table-bin-btn
                            img&attributes(orderContent.bin_img).order__table-bin-img
        p.order__total-promo
            span= orderContent.total_promo_text
            span= orderContent.total
        p.order__total
            span= orderContent.total_text
            span= orderContent.total
        .order__empty-cart-err-wrapper
            p#order__empty-cart-err= orderContent.empty_cart_err
        form(class="order__form" action="/#" method="POST")
            .order__input-name
                input(placeholder=orderContent.name_placeholder type="text" tabindex="1" minlength=3 required name="name")
            .order__input-phone
                input(placeholder=orderContent.phone_placeholder type="tel" tabindex="2" minlength=3 required name="phone")
            button(class="button button-action order__form-btn" type="submit")= orderContent.button
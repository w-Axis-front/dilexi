- const footerContent = LANG.footer;
- const nav = LANG.nav;

footer.footer
    .container
        a(href=footerContent.up_path).footer__up
            svg(class="footer__up-img" width="35" height="20" viewBox="0 0 35 20" fill="none" xmlns="http://www.w3.org/2000/svg")
                path(class="stroke" d="M33.762 18.4776L17.4026 2.11816L1.04313 18.4776" stroke-width="2")
        .footer__content-block
            .footer__logo-block
                a(href=footerContent.logo_path).footer__logo= footerContent.logo
            .footer__content.footer__content-arrow
                a(href=nav.item1_path).footer__content-item= nav.item1
                a(href=nav.item2_path).footer__content-item= nav.item2
                a(href=nav.item3_path).footer__content-item= nav.item3
            .footer__content
                a(href=nav.item4_path).footer__content-item= nav.item4
                a(href=nav.item5_path).footer__content-item= nav.item5
                a(href=nav.item6_path).footer__content-item= nav.item6
            .footer__content
                a(href=footerContent.item1_path).footer__content-item= footerContent.item1
                a(href=footerContent.item2_path).footer__content-item= footerContent.item2
                a(href=footerContent.item3_path).footer__content-item= footerContent.item3
        p.footer__copyright= footerContent.copyright1
        p.footer__copyright= footerContent.copyright2
        p.footer__copyright= footerContent.acceptance
